---
import ShopTour from "@components/ShopTour.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../partials/Hero.astro"
---

<BaseLayout>

	<Hero />

	<div class="my-20 pb-52">
		<h1 class="font-sans text-7xl container max-w-2xl text-center px-20 ml-32 mt-32">
			RISTORANTE PIZZERIA KEBAB <br /> A VARESE
		</h1>

		<ShopTour class="float-right mr-44 -mt-56 h-[40rem] w-[40rem] rounded-3xl"/>
		
		<div class="grid place-items-center mt-20 text-3xl">
			<ul class="list-disc">
				<li>Orari</li>
				<li>WiFi Gratuito</li>
				<li>Prenotazioni</li>
				<li>A domicilio Justead e Deliveroo</li>
				<li>Menu</li>
			</ul>
		</div>
	</div>
</BaseLayout>
