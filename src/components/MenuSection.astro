---
import { slugify } from "@lib/utils";

const { title, class: className, ...props } = Astro.props;
---

<div class:list={[className]} {...props}>
    <a href={`#${slugify(title)}`}>
        <h2 class="text-3xl text-left font-display uppercase">{title}</h2>
    </a>

    <div class="mt-10 font-cursive">
        <div class="float-right h-64 flex-none w-fit">
            <slot name="menu-image" />
        </div>

        <slot />
    </div>

    <div class="divider"></div>
</div>
