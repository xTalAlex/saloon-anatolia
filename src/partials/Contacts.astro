---
import DeliverooIcon from "@components/icons/DeliverooIcon.astro";
import JustEatIcon from "@components/icons/JustEatIcon.astro";
import TelephoneIcon from "@components/icons/TelephoneIcon.astro";
import Config from "@config/site_config.json";
---

<div class="container mx-auto py-40 px-8">
    <h2 class="mb-20 lg:mb-32 text-5xl text-center font-display text-primary uppercase" id="contacts">Scegli come Ordinare</h2>
    <div class="flex flex-col space-y-20 lg:space-y-0 lg:flex-row justify-between items-center">
        <div>
            <a
                class="btn text-5xl font-bold font-cursive text-emerald-600 w-fit mt-5 whitespace-nowrap btn-ghost h-full py-4 px-4"
                href="tel:+393481397971"
                aria-label="Ordina telefonando"
            >
                <span class="">
                    <TelephoneIcon class="h-20 inline" />
                     {Config.phone}
                </span>
            </a>
            <div class="uppercase text-base text-center mt-3 ml-6">Per asporto e prenotazioni</div>
        </div>
        <div>
            <a
                class="w-fit btn btn-ghost h-full py-4 px-4"
                href={Config.deliveroo}
                aria-label="Ordina con Deliveroo"
            >
                <DeliverooIcon class="w-72" />
            </a>
        </div>
        <div>
            <a
                class="w-fit btn btn-ghost h-full py-4 px-4"
                href={Config.justeat}
                aria-label="Ordina con JustEat"
            >
                <JustEatIcon class="w-72" />
            </a>
        </div>
    </div>
</div>
